# AI Email Analyzer Client Package - Environment Configuration
# Copy this file to .env.local and update with your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Your Supabase project URL (required)
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anonymous key (required)
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Supabase service role key (for admin operations - optional)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================

# OpenAI API key (required for AI analysis)
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI model to use (optional, defaults to gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# OpenAI temperature setting (optional, defaults to 0.3)
OPENAI_TEMPERATURE=0.3

# OpenAI max tokens (optional, defaults to 1000)
OPENAI_MAX_TOKENS=1000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application name (optional, defaults to "AI Email Analyzer")
VITE_APP_NAME="Your Company Email Intelligence"

# Application version (optional)
VITE_APP_VERSION=1.0.0

# Environment mode (development, staging, production)
NODE_ENV=development

# =============================================================================
# BRANDING & CUSTOMIZATION
# =============================================================================

# Primary brand color (optional, defaults to #3B82F6)
VITE_BRAND_COLOR=#3B82F6

# Secondary brand color (optional)
VITE_BRAND_SECONDARY_COLOR=#10B981

# Accent brand color (optional)
VITE_BRAND_ACCENT_COLOR=#F59E0B

# Company logo URL (optional)
VITE_COMPANY_LOGO=https://your-domain.com/logo.png

# Company name (optional)
VITE_COMPANY_NAME="Your Company Name"

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable analytics features (optional, defaults to true)
VITE_ENABLE_ANALYTICS=true

# Enable custom rules engine (optional, defaults to true)
VITE_ENABLE_CUSTOM_RULES=true

# Enable integrations (optional, defaults to true)
VITE_ENABLE_INTEGRATIONS=true

# Enable white-label features (optional, defaults to false)
VITE_ENABLE_WHITE_LABEL=false

# Enable advanced reporting (optional, defaults to true)
VITE_ENABLE_ADVANCED_REPORTING=true

# =============================================================================
# PERFORMANCE & MONITORING
# =============================================================================

# Enable performance monitoring (optional, defaults to true)
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Analytics tracking ID (optional)
VITE_ANALYTICS_ID=your-analytics-id

# Error reporting service (optional)
VITE_ERROR_REPORTING_URL=https://your-error-reporting-service.com

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================

# Enable GDPR compliance features (optional, defaults to true)
VITE_ENABLE_GDPR_COMPLIANCE=true

# Data retention period in days (optional, defaults to 730)
VITE_DATA_RETENTION_DAYS=730

# Enable audit logging (optional, defaults to true)
VITE_ENABLE_AUDIT_LOGGING=true

# =============================================================================
# INTEGRATION CONFIGURATIONS
# =============================================================================

# Slack webhook URL (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Email service configuration (optional)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# CRM integration (optional)
CRM_API_URL=https://your-crm-api.com
CRM_API_KEY=your-crm-api-key

# Help desk integration (optional)
HELPDESK_API_URL=https://your-helpdesk-api.com
HELPDESK_API_KEY=your-helpdesk-api-key

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Enable debug logging (optional, defaults to false in production)
VITE_DEBUG_MODE=false

# Enable development features (optional, defaults to false in production)
VITE_ENABLE_DEV_FEATURES=false

# Mock data mode (optional, defaults to false)
VITE_USE_MOCK_DATA=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build output directory (optional, defaults to dist)
VITE_BUILD_OUTPUT_DIR=dist

# Public path for assets (optional, defaults to /)
VITE_PUBLIC_PATH=/

# Enable source maps in production (optional, defaults to false)
VITE_ENABLE_SOURCE_MAPS=false

# =============================================================================
# CORS & NETWORK
# =============================================================================

# Allowed origins for CORS (optional)
VITE_ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com

# API rate limiting (optional, defaults to 100 requests per minute)
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# NOTIFICATIONS & ALERTS
# =============================================================================

# Email notification settings (optional)
VITE_ENABLE_EMAIL_NOTIFICATIONS=true
VITE_NOTIFICATION_EMAIL=notifications@your-domain.com

# Slack notification settings (optional)
VITE_ENABLE_SLACK_NOTIFICATIONS=false
VITE_SLACK_CHANNEL=#support-alerts

# High priority alert settings (optional)
VITE_HIGH_PRIORITY_ALERT_EMAIL=urgent@your-domain.com
VITE_HIGH_PRIORITY_ALERT_SLACK=#urgent-alerts

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Enable automatic backups (optional, defaults to true)
VITE_ENABLE_AUTO_BACKUP=true

# Backup frequency in hours (optional, defaults to 24)
VITE_BACKUP_FREQUENCY_HOURS=24

# Backup retention days (optional, defaults to 30)
VITE_BACKUP_RETENTION_DAYS=30

# =============================================================================
# SUPPORT & MAINTENANCE
# =============================================================================

# Support email (optional)
VITE_SUPPORT_EMAIL=support@your-domain.com

# Documentation URL (optional)
VITE_DOCUMENTATION_URL=https://docs.your-domain.com

# Status page URL (optional)
VITE_STATUS_PAGE_URL=https://status.your-domain.com

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================

# Privacy policy URL (optional)
VITE_PRIVACY_POLICY_URL=https://your-domain.com/privacy

# Terms of service URL (optional)
VITE_TERMS_OF_SERVICE_URL=https://your-domain.com/terms

# Cookie consent settings (optional)
VITE_ENABLE_COOKIE_CONSENT=true
VITE_COOKIE_CONSENT_TEXT="We use cookies to improve your experience."

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Example for development environment:
# NODE_ENV=development
# VITE_DEBUG_MODE=true
# VITE_USE_MOCK_DATA=true
# VITE_ENABLE_DEV_FEATURES=true

# Example for production environment:
# NODE_ENV=production
# VITE_DEBUG_MODE=false
# VITE_USE_MOCK_DATA=false
# VITE_ENABLE_DEV_FEATURES=false
# VITE_ENABLE_PERFORMANCE_MONITORING=true

# Example for enterprise deployment:
# VITE_ENABLE_WHITE_LABEL=true
# VITE_ENABLE_GDPR_COMPLIANCE=true
# VITE_ENABLE_AUDIT_LOGGING=true
# VITE_ENABLE_AUTO_BACKUP=true
# VITE_DATA_RETENTION_DAYS=2555
