# Tier 2 Chatbot Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Logging
LOG_LEVEL=INFO

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://buildaiforme.com
PRODUCTION_ORIGINS=https://buildaiforme.com,https://www.buildaiforme.com

# Authentication
API_KEYS=demo-key-123,your-api-key-here
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7

# Database Configuration (for future use)
DB_TYPE=sqlite
DB_PATH=./data/chatbot.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chatbot_db
DB_USER=chatbot_user
DB_PASSWORD=your-db-password

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@buildaiforme.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
COOKIE_SECRET=your-cookie-secret-here

# Analytics and Monitoring
ANALYTICS_ENABLED=true
SENTRY_DSN=your-sentry-dsn-here

# Feature Flags
AI_ENABLED=true
LEAD_CAPTURE_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=false
SMS_NOTIFICATIONS_ENABLED=false
FILE_UPLOAD_ENABLED=false

# Development Settings
DEBUG=true
HOT_RELOAD=true
AUTO_OPEN_BROWSER=true

# Production Settings (override in production)
# NODE_ENV=production
# LOG_LEVEL=WARN
# DEBUG=false
# HOT_RELOAD=false
# AUTO_OPEN_BROWSER=false
