# =============================================================================
# BuildAIFor.Me Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to version control

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Replace YOUR_PROJECT_REF with your actual Supabase project reference
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Your OpenAI API key for AI features
VITE_OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# DEVELOPMENT SERVER URLs
# =============================================================================
# Local development URLs for different services
VITE_DEV_TIER1_URL=http://localhost:8001
VITE_DEV_TIER2_URL=http://localhost:3001
VITE_DEV_TIER3_URL=http://localhost:8003
VITE_DEV_RAG_URL=http://localhost:3001

# =============================================================================
# PRODUCTION URLs
# =============================================================================
# Update these with your actual Railway/Deployment URLs
VITE_PROD_TIER1_URL=https://tier1-chatbot-production.up.railway.app
VITE_PROD_TIER2_URL=https://tier2-chatbot-production.up.railway.app
VITE_PROD_TIER3_URL=https://tier3-chatbot-production.up.railway.app
VITE_PROD_RAG_URL=https://rag-system-production.up.railway.app

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# For email functionality in demos and templates
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false

# =============================================================================
# API KEYS (Optional)
# =============================================================================
# For API authentication in templates
API_KEYS=demo-key-123,your-api-key-here

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================
# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# =============================================================================
# CORS CONFIGURATION (Optional)
# =============================================================================
# Allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
PRODUCTION_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
